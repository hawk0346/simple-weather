{
  "name": "bun-react-dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "runServices": ["app", "voicevox-engine"],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "git config --global --add safe.directory /workspace && bun install",
  "postStartCommand": "git config --global --get-all safe.directory | grep -qx '/workspace' || git config --global --add safe.directory /workspace",
  "forwardPorts": [3000, 8787, 50021],
  "portsAttributes": {
    "3000": {
      "label": "Vite",
      "onAutoForward": "openBrowser"
    },
    "8787": {
      "label": "Hono API",
      "onAutoForward": "silent"
    },
    "50021": {
      "label": "VOICEVOX ENGINE",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "mounts": ["source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"],
  "workspaceFolder": "/workspace"
}
